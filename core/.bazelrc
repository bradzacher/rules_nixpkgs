build:cache --remote_cache=grpcs://remote.buildbuddy.io
build:cache --experimental_remote_cache_compression

build:bes --bes_results_url=https://app.buildbuddy.io/invocation/
build:bes --bes_backend=grpcs://remote.buildbuddy.io

build:pr --config=cache
build:pr --noremote_upload_local_results
build:pr --remote_download_toplevel
build:pr --verbose_failures
build:pr --disk_cache=
build:pr --flaky_test_attempts=2

build:ci --config=cache
build:ci --config=bes
build:ci --remote_upload_local_results
build:ci --remote_download_toplevel
build:ci --verbose_failures
build:ci --disk_cache=
build:ci --flaky_test_attempts=2

build --host_platform=@rules_nixpkgs_core//platforms:host
build --platforms=@rules_nixpkgs_core//platforms:host

build --crosstool_top=@nixpkgs_config_cc//:toolchain
# Using toolchain resolution can lead to spurious dependencies on
# `@local_config_cc//:builtin_include_directory_paths`. This needs to be
# resolved before `--incompatible_enable_cc_toolchain_resolution` can be
# recommended for `nixpkgs_cc_configure_hermetic`.
# build --incompatible_enable_cc_toolchain_resolution

build --java_runtime_version=nixpkgs_java_11
build --java_language_version=11
build --tool_java_runtime_version=nixpkgs_java_11
build --tool_java_language_version=11

# User Configuration
# ------------------
try-import %workspace%/.bazelrc.local
