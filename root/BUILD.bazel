genrule(
    name = "generated",
    srcs = [
        "@direct_a//:generated",
        "@direct_b//:generated",
    ],
    outs = ["generated.out"],
    cmd = """\
echo 'generated by root 1.3.7 with' > $(OUTS)
echo '--------------------------------------------------' >> $(OUTS)
for src in $(SRCS); do
    cat $$src >> $(OUTS)
    echo '--------------------------------------------------' >> $(OUTS)
done
""",
    visibility = ["//visibility:public"],
)
